<%- include('partials/header') -%>
    <div class="flex flex-col gap-4 bg-zinc-800 h-screen w-full px-10">
        <form class="flex-1 min-h-0 flex flex-col gap-3 p-5 bg-rose-100 text-[#A87677] rounded-lg outline-none mt-5">
            <input class="rounded-sm p-2 outline-1 outline-[#A87676]"  type="text" placeholder="Note heading"/>
            <textarea class="flex-1 resize-none min-h-1/2 rounded-sm p-2 outline-1 outline-[#A87676]" placeholder="Write task details here" id=""></textarea>
            <input class="bg-[#A87677] text-rose-100 p-2" type="submit" value="Create Task" />
        </form>
        <div class="flex-1 min-h-0 flex flex-col flex-wrap gap-2 overflow-y-auto pb-2 mb-5 justify-start content-start">
            <% files.forEach((val) => { %>
                <div class="w-1/4 h-1/4 flex-none flex flex-col p-2 bg-rose-100 opacity-75 hover:opacity-100 rounded-lg text-[#A87676]">
                    <h1 class="border-b border-[#A87676]"><%= val %></h1>
                    <p class="flex-1 overflow-y-auto">Content</p>
                </div>
            <% }) %>
        </div>
    </div>
<%- include('partials/footer') -%>